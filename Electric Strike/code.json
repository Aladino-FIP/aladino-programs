[
    {
        "id": 0,
        "on": {
            "name": "door_open",
            "text": "Apri porta",
            "type": "button",
            "active": true,
            "classes": "btn-primary"
        },
        "code": "SendTimeRelay(vars.door_pin, 0, vars.door_duration, vars.nc ? 0 : 255, -1); History('door.open');"
    },
    {
        "id": 1,
        "code": "SetControlActive('door_open', vars.nc ^ false); SetControlActive('door_opened', vars.nc ^ true);",
        "onPin": {
            "at": "hi",
            "pin_var": "door_pin"
        }
    },
    {
        "id": 2,
        "code": "SetControlActive('door_open', vars.nc ^ true); SetControlActive('door_opened', vars.nc ^ false);",
        "onPin": {
            "at": "lo",
            "pin_var": "door_pin"
        }
    },
    {
        "id": 3,
        "on": {
            "name": "door_opened",
            "text": "Porta aperta",
            "type": "button",
            "active": false,
            "classes": "btn-warning"
        },
        "code": "SendValue(vars.door_pin, vars.nc ? 255 : 0);"
    }
]